<div>
  <div>
    <h1>
      Ingredient #<%= @the_ingredient.id %> details
    </h1>

    <div>
      <div>
        <a href="/ingredients">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_ingredient/<%= @the_ingredient.id %>">
          Delete ingredient
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Recipe
      </dt>
      <dd>
        <%= @the_ingredient.recipe_id %>
      </dd>

      <dt>
        Alcohol
      </dt>
      <dd>
        <%= @the_ingredient.alcohol_id %>
      </dd>

      <dt>
        Measure ml
      </dt>
      <dd>
        <%= @the_ingredient.measure_ml %>
      </dd>

      <dt>
        Measure
      </dt>
      <dd>
        <%= @the_ingredient.measure %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_ingredient.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_ingredient.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit ingredient
    </h2>

    <form action="/modify_ingredient/<%= @the_ingredient.id %>"  method="post" >
      <div>
        <label for="recipe_id_box">
          Recipe
        </label>

        <input type="text" id="recipe_id_box" name="query_recipe_id" value="<%= @the_ingredient.recipe_id %>">
      </div>

      <div>
        <label for="alcohol_id_box">
          Alcohol
        </label>

        <input type="text" id="alcohol_id_box" name="query_alcohol_id" value="<%= @the_ingredient.alcohol_id %>">
      </div>

      <div>
        <label for="measure_ml_box">
          Measure ml
        </label>

        <input type="text" id="measure_ml_box" name="query_measure_ml" value="<%= @the_ingredient.measure_ml %>">
      </div>

      <div>
        <label for="measure_box">
          Measure
        </label>

        <input type="text" id="measure_box" name="query_measure" value="<%= @the_ingredient.measure %>">
      </div>

      <button>
        Update ingredient
      </button>
    </form>
  </div>
</div>

<hr>
