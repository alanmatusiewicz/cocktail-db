<div>
  <div>
    <h1>
      List of all recipes
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h3>
      Add a new recipe
    </h3>

    <form action="/create_recipe_form" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <button type="button" class="btn btn-outline-secondary btn-sm">
        Create recipe
      </button>
    </form>
  </div>
</div>

<hr>

<div>
  <div>
    <table class="table table-hover table-striped col-12">
      <thead class="thead-dark">    

        <th>
          Recipe
        </th>

        <th>
          IBA Official
        </th>

        <th>
          Ingredients
        </th>

      </tr>

      <% @list_of_recipes.each do |a_recipe| %>
      <tr>   

        <td>
          <a href="/recipes/<%= a_recipe.id %>"><%= a_recipe.name %></a>
        </td>

        <td class="text-center">
          <% if a_recipe.iba_status == true %>
            <i class="fas fa-award"></i>
          <% end %>
        </td>

        <td>
          <%= a_recipe.ingredient_list.to_s.gsub(/[^a-z0-9\s\,]/i, "").capitalize %>
        </td>

      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>