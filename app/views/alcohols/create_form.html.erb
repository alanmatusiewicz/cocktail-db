<h1 class="text-center">
  My Bar
</h1>

<hr>

<div class="col-6 container justify-content-center">
  <form action="<%= @source_url %>">
    <div class="input-group text-center mb-3">
      <button class="btn btn-outline-danger btn-sm btn-block">
        Cancel and go back
      </button>
    </div>
  </form>
</div>

<hr>
<br>

<h4 class="text-center">
  Add new alcohol type
</h4>

<div class="col-9 container justify-content-center">
  <form action="/insert_alcohol" method="post">
    <div class="input-group mb-3 col-12">
      <input type="hidden" id="source_url" name="query_source_url" value="<%= @source_url %>">
      <input type="text" id="name_box" name="query_name" class="form-control col-9" placeholder="Alcohol type, ie: whiskey, not Jack Daniels" aria-label="Alcohol type, ie: whiskey" aria-describedby="button-addon2">
      <button class="btn btn-outline-success col-3">Add Alcohol</button>
    </div>
  </form>
</div>

<hr>
